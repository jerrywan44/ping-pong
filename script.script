// Game objects
const paddleHeight = canvas.height * 0.15;
const paddleWidth = canvas.width * 0.02;
const ballSize = canvas.width * 0.01;
let currentPaddleHeight = paddleHeight;

let player1Score = 0;
let player2Score = 0;
let gameWon = false;

// Player 1 paddle
let player1 = {
    y: canvas.height / 2 - paddleHeight / 2,
    speed: 0,
    color: '#FF6B6B',
    powerUp: false,
    originalY: 0
};

// Player 2 paddle
let player2 = {
    y: canvas.height / 2 - paddleHeight / 2,
    speed: 0,
    color: '#4ECDC4',
    powerUp: false,
    originalY: 0
};

// Ball
let ball = {
    x: canvas.width / 2,
    y: canvas.height / 2,
    speedX: canvas.width * 0.005,
    speedY: canvas.height * 0.005,
    color: '#FFE66D'
};

